<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@drawable/outline"
	android:layout_margin="5dp"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="안드로이드 기초보드"
		android:textColor="#000"
		android:id="@+id/boardNameTextVIew"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="시작일 : 2019.11.29"
		android:textColor="#000"
		android:id="@+id/startDayTextView"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000"
		android:id="@+id/clearBoardTextVIew"
		android:text="달성한 주제 : 1개"
		/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="남은 주제 : 1개"
		android:textColor="#000"
		android:id="@+id/todoTaskTextView"
		/>


</LinearLayout>